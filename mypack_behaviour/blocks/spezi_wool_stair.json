{
    "format_version": "1.21.40",
    "minecraft:block": {
        "description": {
            "identifier": "mypack:spezi_wool_stair",
            "menu_category": {
                "category": "construction",
                "group": "itemGroup.name.custom"
            },
            "traits": {
                // define allowed placement orientations
                "minecraft:placement_direction": {
                    "enabled_states": [ "minecraft:cardinal_direction" ]
                }
            }
        },
        "components": {
            "minecraft:geometry": {
                "identifier": "geometry.mystair"
                //"culling": "mypack:sushi_cull"
            },
            "minecraft:selection_box": {
                "origin": [ -8, 0, -8 ], "size": [ 16, 16, 16 ]
            },
            "minecraft:collision_box": {
                "origin": [ -8, 0, -8 ], "size": [ 16, 8, 16 ]
            },
            "minecraft:material_instances": {
                "up": {
                    "texture": "spezi_wool_top"
                },
                "down": {
                    "texture": "spezi_wool_bottom"
                },
                "*": {
                    "texture": "spezi_wool_side"
                }
            },
            "minecraft:custom_components": []
        },
        "permutations":
        [
            // these need to be defined to make the block
            // rotate depending on its placement direction (defined above)
            {
                // north rotation transform
                "condition": "query.block_state ('minecraft:cardinal_direction') == 'north'",
                "components":
                {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                // south rotation transform
                "condition": "query.block_state ('minecraft:cardinal_direction') == 'south'",
                "components":
                {
                    "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            { // west rotation transform
                "condition": "query.block_state ('minecraft:cardinal_direction') == 'west'",
                "components":
                {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            { // east rotation transform
                "condition": "query.block_state ('minecraft:cardinal_direction') == 'east'",
                "components":
                {
                    "minecraft:transformation": { "rotation": [0, -90, 0] }
                }
            }
        ]
    }
}